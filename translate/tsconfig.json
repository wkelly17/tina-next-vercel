{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleDetection": "force",
    /* If your code doesn't run in the DOM: */
    "lib": ["es2022"],
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "."
  }
}
